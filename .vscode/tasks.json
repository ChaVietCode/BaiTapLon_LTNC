{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "SDL2",
            "command": "C:/MinGW/bin/g++.exe",
            "args": [
                "-g",
                "main.cpp",
                "-o",
                "main.exe",
                "-ID:/C++/BaiTapLon_LTNC/src/include",
                "-LD:/C++/BaiTapLon_LTNC/src/lib",
                "-lmingw32",
                "-lSDL2main",
                "-lSDL2",
                "-lSDL2_image",
                "-lSDL2_mixer",
                "-lSDL2_ttf",
                "-mwindows"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}